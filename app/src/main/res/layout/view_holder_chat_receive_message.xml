<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_3sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mAvatar"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:src="@drawable/ic_avatar_default"
        app:layout_constraintBottom_toBottomOf="@id/txtMessage"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Helloooooo"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@id/mAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mAvatar"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_friend"
        android:ellipsize="end"
        android:maxWidth="@dimen/_270sdp"
        android:text="Helloooooooooooo00000000"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mAvatar"
        app:layout_constraintTop_toBottomOf="@id/txtName" />

</android.support.constraint.ConstraintLayout>